<br>
<h3>編集画面</h3>

<div id='rmlb_edit'>

  <%= form_for @rmlb_location_edit, :url => {:controller => 'rmlb_locations', :action => 'update', :project_id => @project, :id => @rmlb_location_edit.user_id } do |f| %>
 
  <p>user_id : &nbsp;&nbsp;    <%= @rmlb_location_edit.user_id %></p>
  <p><%= content_tag(:label, l(:label_rmlb_loginid))%> : &nbsp;   <%= @rmlb_location_edit.user.login %></p>
  <p><%= content_tag(:label, l(:label_rmlb_name))%> : &nbsp;   <%= @rmlb_location_edit.user.name %></p>
  <p><%= content_tag(:label, l(:label_rmlb_location))%> : &nbsp;   <%= f.select(:location, options_for_select(@rmlb_setting_location, :selected => @rmlb_location_edit.location), :include_blank=>true) %></p>
  <p><%= content_tag(:label, l(:label_rmlb_start))%> : &nbsp; <%= f.text_field(:start_time, value: @rmlb_location_edit.start_time, :maxlength => 10) %></p>
  <p><%= content_tag(:label, l(:label_rmlb_end))%> : &nbsp; 
              <% if @rmlb_location_edit.id == @user_current.id %>
                <%= f.text_field(:end_time, value: @rmlb_location_edit.end_time, :maxlength => 10) %>
              <% elsif User.current.admin? %>
                <%= f.text_field(:end_time, value: @rmlb_location_edit.end_time, :maxlength => 10) %>
              <% else %>
                <%= @rmlb_location_edit.end_time %>
              <% end %></p>
  <p><%= content_tag(:label, l(:label_rmlb_memo))%> : &nbsp;   <%= f.text_field(:memo, value: @rmlb_location_edit.memo, :size => "30x1", :maxlength => 30) %></p>
  <%= f.submit l(:button_save) %>
  <% end %>
</div>
