
<%= stylesheet_link_tag 'rmlb_setting.css',:plugin => 'redmine_member_location_board' %>

<div class='rmlb_settings'>

<%= labelled_form_for :settings, @rmlb_setting,
                             :url => {:controller => 'rmlb_settings',
                             :action => 'edit', :project_id => @project, :tab => 'rmlb_settings',
                             :setting_id => @rmlb_setting.id}, 
                             :html => {:id => 'rmlb_settings' } do |f| %>


  <div class="box tabular">

  <p><%= content_tag(:label, l(:label_rmlb_display_feeling)) %><%= check_box_tag 'settings[rmlb_display_feeling]', true, @rmlb_setting['rmlb_display_feeling'] %></p>
  <% folders = Dir.glob('public/plugin_assets/redmine_member_location_board/images/*') %>
  <% folders.each {|f| f.gsub!('public/plugin_assets/redmine_member_location_board/images/','')} %>
  <% folders.unshift("") %>
  <p><%= content_tag(:label, l(:label_rmlb_feeling)) %><%= select_tag('settings[rmlb_image_folder]',options_for_select(folders,@rmlb_setting['rmlb_image_folder'])) %></p>
  
  <br>
  <p><%= content_tag(:label, l(:label_rmlb_enable_global_group)) %>
      Group 1 <%= check_box_tag 'settings[rmlb_enable_global_group_1]', true, @rmlb_setting['rmlb_enable_global_group_1'] %><br>
      Group 2 <%= check_box_tag 'settings[rmlb_enable_global_group_2]', true, @rmlb_setting['rmlb_enable_global_group_2'] %><br>
      Group 3 <%= check_box_tag 'settings[rmlb_enable_global_group_3]', true, @rmlb_setting['rmlb_enable_global_group_3'] %><br>
      Group 4 <%= check_box_tag 'settings[rmlb_enable_global_group_4]', true, @rmlb_setting['rmlb_enable_global_group_4'] %><br>
      Group 5 <%= check_box_tag 'settings[rmlb_enable_global_group_5]', true, @rmlb_setting['rmlb_enable_global_group_5'] %><br>
      Group 6 <%= check_box_tag 'settings[rmlb_enable_global_group_6]', true, @rmlb_setting['rmlb_enable_global_group_6'] %><br>
      Group 7 <%= check_box_tag 'settings[rmlb_enable_global_group_7]', true, @rmlb_setting['rmlb_enable_global_group_1'] %></p>
  
  <br>

  <h2>Project Location Group 1</h2>
