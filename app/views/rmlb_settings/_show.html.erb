    <p><%= content_tag(:label, l(:label_rmlb_group_color)) %><%= text_field_tag 'settings[rmlb_local_group_color_1]', @rmlb_setting['rmlb_local_group_color_1'], :size => 7, :maxlength => 7 %></p>
    <p><%= content_tag(:label, l(:label_rmlb_group_list)) %><%= text_area_tag 'settings[rmlb_local_group_list_1]', @rmlb_setting['rmlb_local_group_list_1'], :rows => 10 %></p>
  
  <br/>
